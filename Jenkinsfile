pipeline {
    agent any 
    stages {
        stage('Say hello') {
            steps {
                echo 'Hello world!'
            }
        }
        stage('Say hello again') {
            steps {
                echo 'Hello world 2: electric boogaloo'
            }
        }
        stage('Say hello again again') {
            steps {
                echo 'Hello world 3: return of the boogaloo'
            }
        }
    }
}
